/* pages/form/form.wxss */
page {
  background-color: #F7FAFC; /* 浅灰色背景 */
}

.form-container {
  padding: 40rpx;
}

.header {
  margin-bottom: 50rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2D3748;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #718096;
  margin-top: 10rpx;
}

.form-group {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.05);
}

.group-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #2D3748;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-bottom: 2rpx solid #E2E8F0;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.submit-button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #2D3748; /* 深蓝灰色 */
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 16rpx;
  margin-top: 40rpx;
  transition: background-color 0.3s;
}

.submit-button:active {
  background-color: #38A169; /* 松石绿 */
}

.disclaimer {
  text-align: center;
  font-size: 24rpx;
  color: #A0AEC0;
  margin-top: 40rpx;
}