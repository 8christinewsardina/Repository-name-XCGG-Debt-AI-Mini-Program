<view class="container">
  <view class="field">
    <text>后端 API 地址</text>
    <input placeholder="http://127.0.0.1:8000" value="{{apiBase}}" bindinput="onInput" />
  </view>
  <view class="field">
    <text>API Token (可选，用于鉴权)</text>
    <input placeholder="Bearer token" value="{{apiToken}}" bindinput="onTokenInput" />
  </view>
  <button bindtap="save">保存并生效</button>
</view>
